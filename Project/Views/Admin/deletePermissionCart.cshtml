@model CartTb
<!-- container section start -->
<section id="container" class="container">

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px;">Are you sure you want to delete this Cart?</h2>

            <!-- page start-->
            <div class="row">
                <div class="col-sm-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Delete User
                        </header>
                        <div class="col-md-12">
                            <div class="panel-body">
                                <ul class="list-group mt-1">
                                    <li class="list-group-item">Cart ID : @Model.cart_id</li>
                                    <li class="list-group-item">Product Name : @Model.prod_id </li>
                                    <li class="list-group-item">User Name : @Model.cust_id </li>
                                    <li class="list-group-item">Product Quantity : @Model.product_quantity </li>
                                    <li class="list-group-item">Cart Status : @Model.cart_status </li>

                                </ul>
                                <a href="@Url.Action("deleteCart","Admin",new{id=Model.cart_id})" class="btn btn-danger">Delete Cart</a>
                                <a href="@Url.Action("fetchCart","Admin")" class="btn btn-primary">Back to list</a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

        </section>
    </section>
</section>
