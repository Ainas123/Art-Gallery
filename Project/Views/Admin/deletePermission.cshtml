@model UserTb
<!-- container section start -->
<section id="container" class="container">

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px;">Are you sure you want to delete this user?</h2>
            
            <!-- page start-->
            <div class="row">
                <div class="col-sm-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Delete User
                        </header>
                        <div class="col-md-12">
                            <div class="panel-body">
                            <ul class="list-group mt-1">
                                <li class="list-group-item">User Id : @Model.user_id</li>
                                <li class="list-group-item">User Name : @Model.user_name </li>
                                <li class="list-group-item">User Phone : @Model.user_phone </li>
                                <li class="list-group-item">User Email : @Model.user_email </li>
                                <li class="list-group-item">User Password : @Model.user_password </li>
                                <li class="list-group-item">User Gender : @Model.user_gender </li>
                                <li class="list-group-item">User Country : @Model.user_country </li>
                                <li class="list-group-item">User City : @Model.user_city </li>
                                <li class="list-group-item">User Address : @Model.user_address </li>

                            </ul>
                            <a href="@Url.Action("userDelete","Admin",new{id=Model.user_id})" class="btn btn-danger">Delete User</a>
                            <a href="@Url.Action("fetchuser","Admin")" class="btn btn-primary">Back to list</a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

        </section>
    </section>
</section>
