@model CategoryTb

<section id="container" class="container">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-file-text-o"></i>Update Category</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="@Url.Action("index","Admin")">Home</a></li>
                        <li><i class="icon_document_alt"></i>Update Category</li>
                        <li><i class="fa fa-file-text-o"></i>Update Category</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Update Category
                        </header>
                        <div class="panel-body">
                            <form class="form-horizontal " method="post" action="" enctype="multipart/form-data">

                                <div class="form-group">
                                    
                                    <div class="col-sm-10">
                                        <input type="hidden"  class="form-control" id="arttype" name="category_id" value="@Model.category_id">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Category Name</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" id="arttype" name="category_name" value="@Model.category_name" type="text">
                                    </div>
                                </div>

                                <div class="form-group">

                                    <p style="text-align: center;"> <button type="submit" name='submit' class="btn btn-primary">Add Category</button></p>
                                </div>
                            </form>
                        </div>
                    </section>

                </div>
            </div>
            <!-- Basic Forms & Horizontal Forms-->
            <!-- page end-->
        </section>
    </section>
</section>
